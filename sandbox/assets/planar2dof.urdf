<?xml version="1.0"?>

<robot name="planar2dof_robot">
  <material name="Blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  <material name="Red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  <material name="Green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="Gray">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>

  <material name="li">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <link name="base"/>

  <link name="link1">
    <collision>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.8"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.8"/>
      </geometry>
      <material name="Red"/>
    </visual>
    <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.1" ixy="0.0" ixz="0.0"
        iyy="1.1" iyz="0.0"
        izz="0.1"/>
    </inertial>
  </link>

  <link name="link1viz">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 1.0"/>
      </geometry>
      <material name="li"/>
    </visual>
  </link>

  <joint name="jointv1" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="link1"/>
    <child link="link1viz"/>
  </joint>

  <joint name="joint1" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.0" upper="1.5707"/> 
    <parent link="base"/>
    <child link="link1"/>
  </joint>

  <link name="link2">
    <collision>
      <origin xyz="0 0 .5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.8"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 .5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.8"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.1" ixy="0.0" ixz="0.0"
        iyy="1.1" iyz="0.0"
        izz="0.1"/>
    </inertial>
  </link>

  <link name="link2viz">
    <visual>
      <origin xyz="0 0 0.4" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.8"/>
      </geometry>
      <material name="li"/>
    </visual>
  </link>

  <joint name="jointv2" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="link2"/>
    <child link="link2viz"/>
  </joint>

  <joint name="joint2" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 1.0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.0" upper="1.5707"/> 
    <parent link="link1"/>
    <child link="link2"/>
  </joint>

</robot>