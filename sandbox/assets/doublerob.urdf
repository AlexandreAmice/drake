<?xml version="1.0"?>

<robot name="planar2dof_robot">

  <material name="Blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  <material name="Red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  <material name="Green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="Gray">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>

  <material name="li">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <link name="base"/>

  <link name="link1">
    <collision>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.8"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.8"/>
      </geometry>
      <material name="Red"/>
    </visual>
    <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.1" ixy="0.0" ixz="0.0"
        iyy="1.1" iyz="0.0"
        izz="0.1"/>
    </inertial>
  </link>

  <link name="link2">
    <collision>
      <origin xyz="0 0 .5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.8"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 .5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.8"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.1" ixy="0.0" ixz="0.0"
        iyy="1.1" iyz="0.0"
        izz="0.1"/>
    </inertial>
  </link>

  <link name="linka">
    <collision>
      <origin xyz="0 0 .65" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 1.1"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 .65" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 1.1"/>
      </geometry>
      <material name="Green"/>
    </visual>
    <inertial>
      <origin xyz="0 0 0.65" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.1" ixy="0.0" ixz="0.0"
        iyy="1.1" iyz="0.0"
        izz="0.1"/>
    </inertial>
  </link>

  <joint name="joint1" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <axis xyz="1 0 0"/>
    <parent link="base"/>
    <child link="link1"/>
  </joint>

  <joint name="jointa" type="revolute">
    <origin rpy="0 0 0" xyz="0 -1.5 0"/>
    <axis xyz="1 0 0"/>
    <parent link="base"/>
    <child link="linka"/>
  </joint>
  
  <joint name="joint2" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 1.0"/>
    <axis xyz="1 0 0"/>
    <parent link="link1"/>
    <child link="link2"/>
  </joint>

  <!-- visual only -->
  <link name="link1viz">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 1.0"/>
      </geometry>
      <material name="li"/>
    </visual>
  </link>

  <link name="link2viz">
    <visual>
      <origin xyz="0 0 0.4" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.8"/>
      </geometry>
      <material name="li"/>
    </visual>
  </link>

  <link name="linkaviz">
    <visual>
      <origin xyz="0 0 0.6" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.8"/>
      </geometry>
      <material name="li"/>
    </visual>
  </link>

  <joint name="jointva" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 -0.2"/>
    <parent link="linka"/>
    <child link="linkaviz"/>
  </joint>

  <joint name="jointv1" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="link1"/>
    <child link="link1viz"/>
  </joint>

  <joint name="jointv2" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="link2"/>
    <child link="link2viz"/>
  </joint>

 

  <!--<collision_filter_group name="dyncolgroup">  
    <member link="link1"/>
    <member link="link2"/>  
  </collision_filter_group> -->
  
</robot>